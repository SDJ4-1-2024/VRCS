<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controller.AvailableVehiclesController" alignment="CENTER" spacing="10">
    <Label text="Available Vehicles"/>
    <TableView fx:id="availableVehiclesTable">
        <columns>
            <TableColumn fx:id="makeColumn" text="Make"/>
            <TableColumn fx:id="brandColumn" text="Brand"/>
            <TableColumn fx:id="registrationPlateColumn" text="Registration Plate"/>
            <TableColumn fx:id="vehicleTypeColumn" text="Vehicle Type"/>
            <TableColumn fx:id="pricePerDayColumn" text="Price Per Day"/>
        </columns>
    </TableView>
    <Button text="Book Selected Vehicle" onAction="#bookVehicle"/>
    <Button text="Cancel" onAction="#cancel"/>
</VBox>
